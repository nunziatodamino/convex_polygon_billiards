{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file with raylib",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-lraylib",
        "-lm",
        "-ldl",
        "-lpthread",
        "-lrt",
        "-lX11"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "Build active file with raylib linking"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++-14 build active file with raylib",
      "command": "/usr/bin/g++-14",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-lraylib",
        "-lm",
        "-ldl",
        "-lpthread",
        "-lrt",
        "-lX11"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: /usr/bin/g++-14 with raylib"
    }
  ]
}
